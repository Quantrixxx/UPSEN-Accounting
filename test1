    <button>Start</button>
    <button>Explorer</button>
    <button>Browser</button>
    <div class="time" id="time"></div>
  </div>

  <script>
    function updateTime() {
      const now = new Date();
      document.getElementById("time").textContent =
        now.toLocaleTimeString("de-DE", { hour: "2-digit", minute: "2-digit" });
    }
    setInterval(updateTime, 1000);
    updateTime();
  </script>
